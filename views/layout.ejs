<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %> | CSE Motors</title>
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <header class="site-header">
      <div class="container header-container">
        <h1 class="site-title">CSE Motors</h1>
        <%- include('partials/nav') %>
      </div>
    </header>

    <main class="container">
      <% if (messages.message) { %>
      <div class="flash"><%= messages.message %></div>
      <% } %> <% if (Array.isArray(messages.error) && messages.error.length > 0)
      { %>
      <div class="flash-error">
        <% messages.error.forEach(function(err) { %>
        <p><%= err %></p>
        <% }) %>
      </div>
      <% } else if (typeof messages.error === "string" &&
      messages.error.trim().length > 0) { %>
      <div class="flash-error">
        <p><%= messages.error %></p>
      </div>
      <% } %> <%- body %>
    </main>

    <footer>
      <div class="container">
        <p>
          &copy; <%= new Date().getFullYear() %> CSE Motors. All rights
          reserved.
        </p>
        <p>
          <a href="/trigger-error" class="footer-link">Trigger Server Error</a>
        </p>
      </div>
    </footer>
  </body>
</html>
